{% if immich_kiosk_container_labels_traefik_enabled %}
traefik.enable=true

{% if immich_kiosk_container_labels_traefik_docker_network %}
traefik.docker.network={{ immich_kiosk_container_labels_traefik_docker_network }}
{% endif %}

{% set middlewares = [] %}

{% if immich_kiosk_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ immich_kiosk_identifier }}-slashless-redirect.redirectregex.regex=^({{ immich_kiosk_container_labels_traefik_path_prefix | quote }})$
traefik.http.middlewares.{{ immich_kiosk_identifier }}-slashless-redirect.redirectregex.replacement=${1}/
{% set middlewares = middlewares + [immich_kiosk_identifier + '-slashless-redirect'] %}
{% endif %}

{% if immich_kiosk_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ immich_kiosk_identifier }}-strip-prefix.stripprefix.prefixes={{ immich_kiosk_container_labels_traefik_path_prefix }}
{% set middlewares = middlewares + [immich_kiosk_identifier + '-strip-prefix'] %}
{% endif %}

{% if immich_kiosk_container_labels_traefik_additional_request_headers.keys() | length > 0 %}
{% for name, value in immich_kiosk_container_labels_traefik_additional_request_headers.items() %}
traefik.http.middlewares.{{ immich_kiosk_identifier }}-add-request-headers.headers.customrequestheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [immich_kiosk_identifier + '-add-request-headers'] %}
{% endif %}

{% if immich_kiosk_container_labels_traefik_additional_response_headers.keys() | length > 0 %}
{% for name, value in immich_kiosk_container_labels_traefik_additional_response_headers.items() %}
traefik.http.middlewares.{{ immich_kiosk_identifier }}-add-response-headers.headers.customresponseheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [immich_kiosk_identifier + '-add-response-headers'] %}
{% endif %}

traefik.http.routers.{{ immich_kiosk_identifier }}.rule={{ immich_kiosk_container_labels_traefik_rule }}
{% if immich_kiosk_container_labels_traefik_priority | int > 0 %}
traefik.http.routers.{{ immich_kiosk_identifier }}.priority={{ immich_kiosk_container_labels_traefik_priority }}
{% endif %}
traefik.http.routers.{{ immich_kiosk_identifier }}.service={{ immich_kiosk_identifier }}
{% if middlewares | length > 0 %}
traefik.http.routers.{{ immich_kiosk_identifier }}.middlewares={{ middlewares | join(',') }}
{% endif %}
traefik.http.routers.{{ immich_kiosk_identifier }}.entrypoints={{ immich_kiosk_container_labels_traefik_entrypoints }}
traefik.http.routers.{{ immich_kiosk_identifier }}.tls={{ immich_kiosk_container_labels_traefik_tls | to_json }}
{% if immich_kiosk_container_labels_traefik_tls %}
traefik.http.routers.{{ immich_kiosk_identifier }}.tls.certResolver={{ immich_kiosk_container_labels_traefik_tls_certResolver }}
{% endif %}

traefik.http.services.{{ immich_kiosk_identifier }}.loadbalancer.server.port={{ immich_kiosk_container_http_port }}
{% endif %}

{{ immich_kiosk_container_labels_additional_labels }}
