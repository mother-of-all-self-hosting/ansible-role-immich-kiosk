UID={{ immich_kiosk_uid }}
GID={{ immich_kiosk_gid }}

OG_LOG_LEVEL={{ immich_kiosk_environment_variables_log_level }}
OG_LOG_OUTPUT={{ immich_kiosk_environment_variables_log_output }}
OG_EXTERNAL_URL={{ immich_kiosk_scheme }}://{{ immich_kiosk_hostname }}

OG_SECRET_KEY={{ immich_kiosk_environment_variables_secret_key }}

{% if immich_kiosk_database_type == 'sqlite' %}
OG_DB_URI={{ immich_kiosk_database_filename }}
{% endif %}

{% if immich_kiosk_database_type == 'mysql' %}
OG_DB_URI=mysql://{{ immich_kiosk_database_mysql_username }}:{{ immich_kiosk_database_mysql_password }}@{{ immich_kiosk_database_mysql_hostname }}:{{ immich_kiosk_database_mysql_port }}/{{ immich_kiosk_database_name }}
{% endif %}

{% if immich_kiosk_database_type == 'postgres' %}
OG_DB_URI=postgres://{{ immich_kiosk_database_postgres_username }}:{{ immich_kiosk_database_postgres_password }}@{{ immich_kiosk_database_postgres_hostname }}:{{ immich_kiosk_database_postgres_port }}/{{ immich_kiosk_database_name }}
{% endif %}

OG_HTTP_PORT={{ immich_kiosk_container_http_port }}
OG_HTTP_GIT_ENABLED={{ immich_kiosk_environment_variables_http_git_enabled | to_json }}

OG_METRICS_ENABLED={{ immich_kiosk_environment_variables_metrics_enabled | to_json }}
OG_SSH_GIT_ENABLED={{ immich_kiosk_environment_variables_ssh_git_enabled | to_json }}

OG_SSH_PORT={{ immich_kiosk_container_ssh_port }}

{{ immich_kiosk_environment_variables_additional_variables }}
